{
    "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false
    },

    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": { "noAssignInExpressions": "off" }
        }
    },
    "formatter": {
        "enabled": false
    },

    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "off"
            }
        }
    }
}
